<Window x:Class="ПП02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ПП02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="328" FontFamily="Segoe Print">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="26" Margin="0,30,0,0"/>
            <TextBlock Text="Логин" Margin="0,70,0,0"/>
            <TextBox Name="Login" Margin="0,5,0,0"/>
            <TextBlock Text="Пароль" Margin="0,15,0,0"/>
            <TextBox Name="Pass" Margin="0,5,0,0"/>
            <Button Content="Вход" Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Window>
